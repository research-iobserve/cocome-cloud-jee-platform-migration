<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<!-- Kieker setup -->
	<context-param>
		<param-name>deploymentId</param-name>
		<param-value>store-logic-webservice</param-value>
	</context-param>

	<filter>
		<filter-name>SessionAndTraceRegistrationFilter</filter-name>
		<filter-class>org.iobserve.monitoring.probe.servlet.SessionAndTraceRegistrationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SessionAndTraceRegistrationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>org.iobserve.monitoring.probe.servlet.DeploymentContextListener</listener-class>
	</listener>
</web-app>
